<!DOCTYPE html>
<html>

<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>Rodriguez Consultores - Inicio</title>
    <environment names="Development">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/semantic.min.css">
        <link rel="stylesheet" href="~/css/Site.css">
    </environment>
</head>

<body>
    <div class="ui vertical inverted sidebar menu">
        <menulink controller-name="Home" action-name="Index" menu-text="Inicio"></menulink>
        <menulink controller-name="Home" action-name="About" menu-text="Nosotros"></menulink>
        <menulink controller-name="Home" action-name="Services" menu-text="Servicios"></menulink>
        <menulink controller-name="Home" action-name="Contact" menu-text="Contacto"></menulink>
    </div>
    <div class="pusher">
        <div class="navigation">
            <!-- Following Menu -->
            <div class="ui large top fixed hidden menu">
                <div class="ui container">
                    <menulink controller-name="Home" action-name="Index" menu-text="Inicio"></menulink>
                    <menulink controller-name="Home" action-name="About" menu-text="Nosotros"></menulink>
                    <menulink controller-name="Home" action-name="Services" menu-text="Servicios"></menulink>
                    <menulink controller-name="Home" action-name="Contact" menu-text="Contacto"></menulink>
                </div>
            </div>

            <div class="ui vertical masthead center aligned segment">
                <div class="ui container nav">
                    <div class="ui container">
                        <div class="ui large secondary pointing menu">
                            <a class="toc item">
                                <i class="sidebar icon"></i>
                            </a>
                        </div>
                    </div>
                    <a href="/" class="logo item">
                        <img src="~/images/logo.png" alt="Home">
                    </a>
                    <div class="ui container">
                        <div class="ui large secondary pointing menu">
                            <menulink controller-name="Home" action-name="Index" menu-text="Inicio"></menulink>
                            <menulink controller-name="Home" action-name="About" menu-text="Nosotros"></menulink>
                            <menulink controller-name="Home" action-name="Services" menu-text="Servicios"></menulink>
                            <menulink controller-name="Home" action-name="Contact" menu-text="Contacto"></menulink>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="ui inverted vertical footer segment">
            <div class="ui container">
                <div class="ui stackable inverted divided equal height stackable grid">
                    <div class="three wide column">
                        <h4 class="ui inverted header">Acerca de</h4>
                        <div class="ui inverted link list">
                            <menulink controller-name="Home" action-name="Index" menu-text="Inicio"></menulink>
                            <menulink controller-name="Home" action-name="About" menu-text="Nosotros"></menulink>
                            <menulink controller-name="Home" action-name="Services" menu-text="Servicios"></menulink>
                            <menulink controller-name="Home" action-name="Contact" menu-text="Contacto"></menulink>
                        </div>
                    </div>
                    <div class="three wide column">
                        <h4 class="ui inverted header">Servicios</h4>
                        <div class="ui inverted link list">
                            <a href="/Services" class="item">Capacitación</a>
                            <a href="/Services" class="item">Asesoría y Consultorías</a>
                            <a href="/Services" class="item">Trámites</a>
                        </div>
                    </div>
                    <div class="seven wide column">
                        <h4 class="ui inverted header">Siguenos en</h4>
                        <span class="fa fa-facebook-official"></span>
                        <span class="fa fa-twitter"></span>
                        <p>Rodríguez Consultores &amp; Asociados©2017</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <environment names="Production">
        
    </environment>
    <environment names="Development">
        <script type="text/javascript" src="~/js/jquery-3.1.1.min.js"></script>
        <script type="text/javascript" src="~/js/knockout-3.4.1.js"></script>
        <script type="text/javascript" src="~/js/semantic.min.js"></script>
        <script type="text/javascript" src="~/js/site.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>